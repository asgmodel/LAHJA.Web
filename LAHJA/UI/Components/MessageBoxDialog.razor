

@using LAHJA.Them


<MudDialog class="d-flex align-center justify-content-center flex-column" style="width:40% !important">
    <DialogContent>
        <MudText Typo="Typo.h6">@title</MudText>
        <MudText Typo="Typo.body1">@body</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="onConfirm" class="mx-5 " Color="@AppColors.BASE_COLOR_ENUM">OK</MudButton>
        <MudButton OnClick="onCancel" class="mx-5 " Color="Color.Secondary">Cancel</MudButton>
    </DialogActions>
</MudDialog>

