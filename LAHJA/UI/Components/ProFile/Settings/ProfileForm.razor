@using LAHJA.Them

@inject NavigationManager NavigationManager

<MudContainer Class="pt-6 border-gray-100 md:col-span-8 lg:col-span-9 xl:col-span-9 md:px-4 py-4" dir="@GetDirection()">
    <MudContainer Class="mb-6">
        <MudContainer Class="flex justify-between">
            <MudText Typo="Typo.h5" Class="flex flex-row items-center text-xl font-bold">
                @Texts["ProfileSettings"]
            </MudText>
        </MudContainer>
    </MudContainer>
    <MudForm @ref="form" OnValidSubmit="HandleValidSubmit" Class="mb-8 flex flex-col space-y-5 md:pr-36">
        <MudTextField @bind-Value="FullName" Label="@Texts["FullName"]" Placeholder="@Texts["FullNamePlaceholder"]" Name="fullname" Pattern="^(?!\.+$).*$" MaxLength="50" Required="true" />
        <MudContainer>
            <MudText Typo="Typo.body2">@Texts["Avatar"] <span class="pl-2 text-gray-400">(@Texts["Optional"])</span></MudText>
            <MudContainer Class="flex items-center gap-2">
                <MudButton Variant="Variant.Text" Class="mt-1 flex items-center text-sm text-gray-500 hover:text-gray-800 hover:underline">@Texts["Remove"]</MudButton>

            </MudContainer>
        </MudContainer>
        <MudTextField @bind-Value="Homepage" Label="@Texts["Homepage"]" Placeholder="@Texts["HomepagePlaceholder"]" Name="homepage" Type="url" />
        <MudTextField @bind-Value="Interests" Label="@Texts["Interests"]" Placeholder="@Texts["InterestsPlaceholder"]" Name="details" TextArea="true" />
        <MudTextField @bind-Value="GitHubUsername" Label="@Texts["GitHubUsername"]" Placeholder="@Texts["GitHubPlaceholder"]" Name="github" Pattern="[a-zA-Z\d\-]+" Title="@Texts["GitHubTitle"]" />
        <MudTextField @bind-Value="TwitterUsername" Label="@Texts["TwitterUsername"]" Placeholder="@Texts["TwitterPlaceholder"]" Name="twitter" Pattern="[a-zA-Z\d_]+" Title="@Texts["TwitterTitle"]" />
        <MudTextField @bind-Value="LinkedInProfile" Label="@Texts["LinkedInProfile"]" Placeholder="@Texts["LinkedInPlaceholder"]" Name="linkedin" Pattern="[a-zA-Z\d\-]+" Title="@Texts["LinkedInTitle"]" />
        <MudTextField @bind-Value="BlueskyUsername" Label="@Texts["BlueskyUsername"]" Placeholder="@Texts["BlueskyPlaceholder"]" Name="bluesky" Pattern="[a-zA-Z\d\.-]+" Title="@Texts["BlueskyTitle"]" />
        <MudButton Type="Submit" Variant="Variant.Filled" Color="@AppColors.BASE_COLOR_ENUM">@Texts["SaveChanges"]</MudButton>
    </MudForm>
</MudContainer>

