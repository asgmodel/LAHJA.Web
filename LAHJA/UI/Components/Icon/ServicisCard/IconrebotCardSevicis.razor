}

@code {
    [Parameter] public CardTextAndIcon? Params { get; set; }

    // إذا كنت بحاجة إلى منطق إضافي، يمكنك إضافته هنا
    protected override void OnInitialized()
    {

        // إعطاء قيمة افتراضية لـ Params إذا كانت null
        Params ??= new CardTextAndIcon
            {
                Name = "AI solutions for every business",
                IsName = true,

                Icon = new CardIcon
                {
                    Src = "https://example.com/icon.png",  // أضف رابط الأيقونة هنا
                    ClassIcon = ""  // الفئة الخاصة بالأيقونة (يمكنك تغييرها حسب الحاجة)
                },
                ClassItems = "Discover our AI services designed to optimize operations, enhance decisions, and drive growth.",

                   ButtonLink = "Explore all services",
            };
    }
}
