@using LAHJA.Data.UI.Components
<style>
 .feature-container {
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: 10px;
        padding: 20px;
/*         border: 1px solid #ddd;
 */        border-radius: 8px;
        max-width: 400px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .feature-content h3 {
        margin: 0;
        font-size: 1.2rem;
    }

    .feature-content p {
        margin: 5px 0;
        font-size: 0.9rem;
        color: #555;
    }

    .feature-content a {
        color: blue;
        text-decoration: none;
    }

        .feature-content a:hover {
            text-decoration: underline;
        }

 

</style>

