@using LAHJA.Data.UI.Components
<style>

    .custom-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        /*         margin: 20px auto;
     */
    }

</style>

  @if (Params != null)
{


    <MudText class="custom-container ">
        @foreach (var data in Params)
        {
            <MudTextField T="string" Class="@data.Class" ReadOnly Text="@data.Value" Label="@data.Label" Variant="Variant.Outlined" />
        }
    </MudText>
}
@code{

    [Parameter] public List<CardStateCount<string>>? Params { set; get; }

}




