<MudDialog>

    <DialogContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-4">
            <MudPaper Elevation="4" Class="pa-4">


                <video src="@UrlVideo" controls style="width: 100%; margin-top: 20px;"></video>


                <MudTimeline TimelinePosition="TimelinePosition.Start" Class="mt-4">
                    <MudTimelineItem Size="Size.Medium" Color="Color.Info" Elevation="25">
                        <MudCard Outlined="true" Elevation="25">
                            <MudCardContent>
                                <MudText Typo="Typo.h6">Kopparberg</MudText>
                                <MudText Typo="Typo.body2">Kopparberg is a locality and the seat of Ljusnarsberg, Örebro County, Sweden, with 4,200 inhabitants in 2015.</MudText>
                                <MudText Typo="Typo.body2">It is famous for Kopparberg Cider, now one of the best selling ciders in the UK and worldwide.</MudText>
                            </MudCardContent>
                        </MudCard>



                    </MudTimelineItem>
                </MudTimeline>

            </MudPaper>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>





@code {

    public bool Modifiers { get; set; } = true;
    public bool Outlined { get; set; }
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    public string NameTitlePage { get; set; } = "";
    public string TooltipText { get; set; } = "Secondary";
    public string UrlVideo { get; set; } = "https://www.example.com/video.mp4";
    public string Descrption { get; set; } = "";

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancel() => MudDialog.Cancel();
}
