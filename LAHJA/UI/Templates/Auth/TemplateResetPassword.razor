@page "/ResetPassword"
@using LAHJA.UI.Components.Auth
@using Microsoft.AspNetCore.Authorization
@inject LAHJA.Data.UI.Templates.Auth.TemplateAuth Template
@inject NavigationManager Navigation
@attribute [AllowAnonymous]

<ResetPasswordComponent Email="@Email" Code="@Code" OnSubmitResetPassword="Template.BuilderComponents.SubmitResetPassword" />

@code {

    string Email { get; set; }
    string Code { get; set; }

    protected override void OnInitialized()
    {

        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var queryParams = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (queryParams.ContainsKey("email"))
        {
            Email = queryParams["email"];
        }

        if (queryParams.ContainsKey("code"))
        {
            Code = queryParams["code"];
        }

        StateHasChanged();
    }
}