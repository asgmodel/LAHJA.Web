        <MudText Class="feature-content">
            @Params.Description
            <MudLink Href="https://docs.stripe.com/billing/entitlements" Target="_blank">View docs</MudLink>
        </MudText>

        <ButtonCardCreate Label="@Params.Label" OnClick="OnClick" />
    </MudPaper>
</div>
